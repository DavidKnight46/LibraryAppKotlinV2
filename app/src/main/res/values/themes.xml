<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LIbraryServiceAndroidV2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="activityStyle">
        <item name="android:background">#CCB3E5FC</item>
        <item name="android:foregroundTint">#BBDEFB</item>
    </style>

    <style name="Theme.LIbraryServiceAndroidV2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myButtonStyle">
        <item name="android:textColor">#E1BEE7</item>
        <item name="android:backgroundTint">#F67575</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="Theme.LIbraryServiceAndroidV2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LIbraryServiceAndroidV2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>